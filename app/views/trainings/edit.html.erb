<h1>Изменить тренировку</h1>

<%= form_with(model: @base, local: true) do |form| %>
  <% if @base.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@base.errors.count, "ошибка(и)") %> не позволили обновить тренировку:</h2>
      <ul>
        <% @base.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :trainer_id, 'Тренер' %>
    <%= form.collection_select :trainer_id, Trainer.all, :id, 
      lambda { |trainer| "#{trainer.last_name} #{trainer.first_name}" }, 
      prompt: 'Выберите тренера', required: true %>
  </div>

  <div>
    <%= form.label :client_id, 'Клиент' %>
    <%= form.collection_select :client_id, Client.all, :id, 
      lambda { |client| "#{client.last_name} #{client.first_name}" }, 
      prompt: 'Выберите клиента', required: true %>
  </div>

  <div>
    <%= form.label :training_date, 'Дата тренировки' %>
    <%= form.date_field :training_date, value: @base.training_date, required: true %>
  </div>

  <div>
    <%= form.label :training_time, 'Время тренировки' %>
    <%= form.time_field :training_time, value: @base.training_time, required: true %>
  </div>

  <div>
    <%= form.label :duration_minutes, 'Продолжительность (минут)' %>
    <%= form.number_field :duration_minutes, required: true %>
  </div>

  <div>
    <%= form.label :training_type, 'Тип тренировки' %>
    <%= form.text_field :training_type, required: true %>
  </div>

  <div>
    <%= form.label :status, 'Статус' %>
    <%= form.text_field :status, required: true %>
  </div>

  <div>
    <%= form.submit 'Обновить тренировку' %>
  </div>
<% end %>

<%= link_to 'Вернуться к тренировкам', trainings_path %>
