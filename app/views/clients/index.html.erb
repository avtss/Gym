<div class="text-center mb-4">
  <h1>Клиенты</h1>
  <%= link_to 'Добавить нового клиента', new_client_path, class: 'btn btn-primary mt-2' %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Имя</th>
      <th>Почта</th>
      <th>Номер телефона</th>
      <th>Тип абонемента</th>
      <th>Начало абонемента</th>
      <th>Конец абонемента</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.membership_type %></td>
        <td><%= client.membership_start_date.strftime('%d.%m.%Y') if client.membership_start_date %></td>
        <td><%= client.membership_end_date.strftime('%d.%m.%Y') if client.membership_end_date %></td>
        <td>
          <%= link_to 'Изменить', edit_client_path(client), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
