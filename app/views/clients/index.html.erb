<h1>Клиенты</h1>

<%= link_to 'Добавить нового клиента', new_client_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Почта</th>
      <th>Номер телефона</th>
      <th>Тип абонемента</th>
      <th>Начало абонемента</th>
      <th>Конец абонемента</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.membership_type %></td>
        <td><%= client.membership_start_date %></td>
        <td><%= client.membership_end_date %></td>
        <td>
          <%= link_to 'Edit', edit_client_path(client), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', client, method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
