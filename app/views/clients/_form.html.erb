<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "ошибка(и)") %> не позволили создать клиента:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :last_name, 'Фамилия' %>
    <%= form.text_field :last_name, required: true %>
  </div>

  <div>
    <%= form.label :first_name, 'Имя' %>
    <%= form.text_field :first_name, required: true %>
  </div>

  <div>
    <%= form.label :middle_name, 'Отчество' %>
    <%= form.text_field :middle_name %>
  </div>

  <div>
    <%= form.label :email, 'Почта' %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :phone, 'Номер телефона' %>
    <%= form.telephone_field :phone, required: true %>
  </div>

  <div>
    <%= form.label :membership_type, 'Тип абонемента' %>
    <%= form.text_field :membership_type %>
  </div>

  <div>
    <%= form.label :membership_start_date, 'Начало абонемента' %>
    <%= form.date_field :membership_start_date %>
  </div>

  <div>
    <%= form.label :membership_end_date, 'Конец абонемента' %>
    <%= form.date_field :membership_end_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
