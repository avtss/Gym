<div class="text-center mb-4">
  <h1>Тренера</h1>
  <%= link_to 'Добавить нового тренера', new_trainer_path, class: 'btn btn-primary mb-2' %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Специализация</th>
      <th>Почта</th>
      <th>Номер телефона</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |trainer| %>
      <tr>
        <td><%= trainer.last_name %></td>
        <td><%= trainer.first_name %></td>
        <td><%= trainer.middle_name %></td>
        <td><%= trainer.specialization %></td>
        <td><%= trainer.email %></td>
        <td><%= trainer.phone %></td>
        <td>
          <%= link_to 'Изменить', edit_trainer_path(trainer), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Подробно', trainer_path(trainer), class: 'btn btn-info btn-sm' %>
          <%= button_to "Удалить", trainer, method: :delete, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
