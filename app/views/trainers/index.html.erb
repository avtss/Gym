<div class="text-center mb-4">
  <h1>Тренера</h1>
  <%= link_to 'Добавить нового тренера', new_trainer_path, class: 'btn btn-primary mb-2' %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Имя</th>
      <th>Специализация</th>
      <th>Почта</th>
      <th>Номер телефона</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.specialization %></td>
        <td><%= trainer.email %></td>
        <td><%= trainer.phone %></td>
        <td>
          <%= link_to 'Изменить', edit_trainer_path(trainer), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Удалить', trainer, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
