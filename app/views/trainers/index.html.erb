<h1>Trainers</h1>

<%= link_to 'Add New Trainer', new_trainer_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Специализация</th>
      <th>Почта</th>
      <th>Номер телефона</th>
      <th>Рабочие дни</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.specialization %></td>
        <td><%= trainer.email %></td>
        <td><%= trainer.phone %></td>
        <td><%= trainer.availability_schedule %></td>
        <td>
          <%= link_to 'Edit', edit_trainer_path(trainer), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', trainer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>